#-------------------------------------------------------------
_check_equal_vars()
{
  eval [ "\$$2" = "\$$3" ] && return 0
  _report_check "$1" "$4" "variable $2 != $3" "$5"
}

# %1 : var1
# %2 : var2
# %3 : message (optional)
check_equal_vars()
{
  _check_equal_vars E "$1" "$2" "$3"
}

