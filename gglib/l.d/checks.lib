  _check_value_in B "$1" "$2" "$3"
}

# %1 variable
# %2 possible paths roots separated by :
# %3 optional message
# %4 wait delay time
check_value_in_W()
{
  _check_value_in W "$1" "$2" "$3" "$4"
}

#-------------------------------------------------------------
# %1 : level
# %2 : variable
# %3 : min elements
# %4 : max elements (<0 -> no max)
# %5 : optional message
# %6 : [wait timeout]
_check_array_size()
{
local _level="$1"
local _var="$2"
local _min="$3" _max="$4"
local _msg="$5"
local _delay="$6"
local _n
  eval _n=\${#${_var}[@]}
  [ $_n -ge $_min ] && [ $_max -lt 0 -o $_n -le $_max ] && return 0
  
  _report_check "${_level}" "${_msg}" "array ${_var} has ${_n} entries, expected ${_min} to ${_max}" "${_delay}"
}

# %1 : variable
# %2 : min elements
# %3 : max elements (<0 -> no max)
# %4 : optional message
check_array_size()
{
  _check_array_size E "$1" "$2" "$3" "$4"
}

check_array_size_B()
{
  _check_array_size B "$1" "$2" "$3" "$4"
}

# %1 : variable
# %2 : min elements
# %3 : max elements (<0 -> no max)
# %4 : optional message
# %5 : [wait timeout]
check_array_size_W()
{
  _check_array_size W "$1" "$2" "$3" "$4" "$5"
}

#-------------------------------------------------------------
 # %1 : level
 # %2 : var
 # %3 : message (optional)
 # %4 : warning wait delay
_check_absolute_path()
{
local _lvl="$1"
shift
local _p
local _opt

  lazy_flags _opt "$1" && shift
  eval _p=\"\$$1\"
  lazy_flags -o "${_opt}" && [ -z "${_p}" ] && return 0 # empty ok (optional)
  
  [ "${_p:0:1}" = "/" ] && return 0
  _report_check "${_lvl}" "$2" "variable $2 does not contain absolute path" "$3"
}

 # %1 : var
 # %2 : message (optional)
check_absolute_path()
{
  _check_absolute_path E "$@"
}

 # %1 : var
 # %2 : message (optional)
check_absolute_path_B()
{
  _check_absolute_path B "$@"
}

 # %1 : var
 # %2 : message (optional)
 # %3 : [wait timeout]
check_absolute_path_W()
{
  _check_absolute_path W "$@"
}

#-------------------------------------------------------------
 # %1 : level
 # %2 : check to be executed per element
 # %3 : array variable
 # %2.. check parameters, except first which will be variable
_check_array()
{
local _l="$1"
local _chk="$2"
local _v="$3"
local _el
local _n
local _i=0
  shift 3
  local _args=( "$@" )
  
  eval _n=\$\{\#${_v}\[\@\]\}
  while [ $_i -lt $_n ]
  do
    _el="${_v}[${_i}]"
    eval ${_chk} ${_el} "$@"
    _i=$((_i+1))
  done  
}

check_array()
{
  _check_array E "$@"
}

check_array_B()
{
  _check_array B "$@"
}

check_array_W()
{
  _check_array W "$@"
}


